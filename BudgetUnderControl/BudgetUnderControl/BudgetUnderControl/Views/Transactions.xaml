<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetUnderControl.Views.Transactions"
             xmlns:local="clr-namespace:BudgetUnderControl.Views;assembly=BudgetUnderControl">

    <ContentPage.Content>
        <AbsoluteLayout x:Name="absoluteLayout" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <StackLayout Padding="0,20,0,0" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
                <Label Text="Transactions" HorizontalOptions="Center" FontAttributes="Bold" />
                <ListView x:Name="transactions" ItemsSource="{Binding Transactions}" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <local:TransactionListItem Name="{Binding Name}" Account="{Binding Account}" Value="{Binding  Value}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>