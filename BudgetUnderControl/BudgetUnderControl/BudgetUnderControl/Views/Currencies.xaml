<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetUnderControl.Views.Currencies"
             xmlns:local="clr-namespace:BudgetUnderControl.Views;assembly=BudgetUnderControl">
    <ContentPage.Content>
    <StackLayout Padding="0,20,0,0">
        <Label Text="Curriences" HorizontalOptions="Center" FontAttributes="Bold" />
        <ListView x:Name="curriences">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:CurrencyListItem Code="{Binding Code}" Name="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="load" Clicked="OnButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>